 	       	public void onClick(View v)
 	     	   {	
 	              	if (choice[1].getText() ==Integer.toString(intres)){
 	    			   scoreinc++;
 	    			  score.setText(String.valueOf(scoreinc));
 	    			 Toast.makeText(StartGame.this, "Correct!", Toast.LENGTH_SHORT).show();
 	    			 onStart();
 	              	}
 	              	else 
 	              		Toast.makeText(StartGame.this, "Wrong!", Toast.LENGTH_SHORT).show();
 	              		onStart();
 	     	   }
 	         });
 	    choice[2].setOnClickListener(new OnClickListener() {
 	       	public void onClick(View v)
 	     	   {	
 	              	if (choice[2].getText() ==Integer.toString(intres)){
 	    			   scoreinc++;
 	    			  score.setText(String.valueOf(scoreinc));
 	    			 Toast.makeText(StartGame.this, "Correct!", Toast.LENGTH_SHORT).show();
 	    			  onStart();
 	              	}
 	              	else 
 	              		Toast.makeText(StartGame.this, "Wrong!", Toast.LENGTH_SHORT).show();
 	              		onStart();
 	     	   }
 	         });
 	    choice[3].setOnClickListener(new OnClickListener() {
 	       	public void onClick(View v)
 	     	   {	
 	              	if (choice[3].getText() == Integer.toString(intres)){
 	    			   scoreinc++;
 	    			  score.setText(String.valueOf(scoreinc));
 	    			 Toast.makeText(StartGame.this, "Correct!", Toast.LENGTH_SHORT).show();
 	    			  onStart();
 	              	}
 	              	else 
 	              		Toast.makeText(StartGame.this, "Wrong!", Toast.LENGTH_SHORT).show();
 	              		onStart();


//ArrayList<Integer> ar= new ArrayList<Integer>();
